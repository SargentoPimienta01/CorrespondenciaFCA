---
import Correspondencia from "../layouts/Correspondencia.astro"
import DocumentoLista from "../components/DocumentoLista"
import ProtectedRoute from "../components/ProtectedRoute"
import AuthProvider from "../components/AuthProvider"
---

<Correspondencia title="Seguimiento de Procesos ATT">
	<div class="title">
	  <h1>SEGUIMIENTO - DOCUMENTOS ATT</h1>
	</div>
  
	<AuthProvider client:only="react">
	<ProtectedRoute>
		<!-- Renderizar la lista de procesos -->
		<DocumentoLista client:load />
	</ProtectedRoute>
	</AuthProvider>
  </Correspondencia>
  
  <style is:global>
	.title {
	  text-align: center;
	  font-size: 40px;
	  font-weight: bold;
	}
  </style>
